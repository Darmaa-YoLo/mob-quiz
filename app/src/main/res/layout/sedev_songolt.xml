<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/sedev">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:id="@+id/sedevzurag"
        android:background="@drawable/sedev_zurag"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"

        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sedev1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:text="хөл бөмбөг"
            app:icon="@drawable/sedev1ico"
            app:iconTint="@null"
            app:iconSize="24sp"
            app:backgroundTint="#daaa77"
            app:shapeAppearance="@style/ShapeAppearance.App.SmallComponent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sedev2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:icon="@drawable/sedev2ico"
            app:iconSize="24sp"
            app:iconTint="@null"
            android:layout_marginVertical="10dp"
            android:text="сагсан бөмбөг"
            app:backgroundTint="#daaa77"
            app:shapeAppearance="@style/ShapeAppearance.App.SmallComponent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sedev3"
            android:layout_width="match_parent"
            app:icon="@drawable/sedev3ico"
            app:iconSize="24sp"
            app:iconTint="@null"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:text="танин мэдэхүй"
            app:backgroundTint="#daaa77"
            app:shapeAppearance="@style/ShapeAppearance.App.SmallComponent" />
    </LinearLayout>

</LinearLayout>